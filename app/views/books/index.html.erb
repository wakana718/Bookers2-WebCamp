<h1>User info</h1>
<div class="profile-container">
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <h3><%= @user.name %></h3>
    <h3><%= @user.introduction %></h3>
   <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
   <% end %>
</div>


<h1>New book</h1>
 <%= form_with model:@book, local:true do |f| %>

<!-- エラーメッセージの表示（バリデーション）-->
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
 <%= @book.errors.count %>error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Opinion</h4>
   <%= f.text_area :body %>

   <%= f.submit 'Create Book' %>

 <% end %>

<h1>Books</h1>
　<table>
　  <thead>
　    <th colspan="3"></th>
　    <th>Title</th>
　    <th>Opinion</th>
　  </thead>
　  <tbody>
　    <tr>
　     <td>
　       <% @profile_images.each do |post_image| %>
　       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
         <% end %>
       </td>
     <% @books.each do |book| %>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
      <% end %>
　    </tr>
　  </tbody>
　</table>