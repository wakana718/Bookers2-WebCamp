<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

<h1>Editing Book</h1>
<!-- エラーメッセージの表示（バリデーション）-->
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
 <%= @book.errors.count %>error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 </br>
 </br>
 <%= f.submit "Update Book", class:"btn btn-primary" %>
<% end %>
</br>

<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>

  </div>
 </div>
</div>