<div class="container">
  <div class="row">
      <div class="col-xs-3" >

<!-- エラーメッセージの表示（バリデーション）-->
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
 <%= @book.errors.count %>error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 </br>
 </br>
 <%= f.submit "Update Book", class:"btn btn-default" %>
<% end %>
</br>

<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>

</div>
</div>
</div>