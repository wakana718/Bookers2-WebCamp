<div class="container">
 <div class="row">

  <div class="col-xs-3">
   <%= render 'users/list', user: @user %>
   <%= render 'books/list2', book: @book %>
  </div>

  <div class="col-xs-9">
    <h1>Book detail</h1>
      <table class="table table-hover">
       <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <%= link_to @user.name, user_path(@user.id) %>
        </td>
        <td><%= @book_show.title %></td>
        <td><%= @book_show.body %></td>

        <!--いいね機能-->
        <td>
		   <% if @book.favorited_by?(current_user) %>

         <%= link_to favorites_path(@book_id), method: :delete do %>
          <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;" ></i>
         <% end %>
           <%= @book.favorites.count %>


      <% else %>

         <%= link_to favorites_path(@book_id), method: :post do %>
          <i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i>
         <% end %>
           <%= @book.favorites.count %>


      <% end %>
		 </td>
        <!--いいね機能-->




         <% if current_user == @book_show.user %>
        <td>
         <button class="btn btn-success"><%= link_to "Edit", edit_book_path(@book_show) %></button>
        </td>
        <td>
         <button class="btn btn-danger"><%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: {confirm: "本当に消しますか？"} %>
         </button>
        </td>
         <% end %>
       </tr>
      </table>
   </div>

 </div>
</div>