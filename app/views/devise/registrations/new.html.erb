<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <!--住所検索-->
  <div class="field">
    <%= f.label :postcode, "Postal code" %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code, "Prefecture code" %><br />
    <%= f.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県' %><br>
  </div>

  <div class="field">
    <%= f.label :address_city, "City" %><br />
    <%= f.text_field :address_city %>
  </div>


  <div class="field">
    <%= f.label :address_street, "Street" %><br />
    <%= f.text_field :address_street %>
  </div>


  <div class="field">
    <%= f.label :address_building, "Building name" %><br />
    <%= f.text_field :address_building %>
  </div>



  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
