<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <header>
   <div class="col-lg-12" style="background-color: black;" >
     <div style= "color :white;">
      <h2>Bookers</h2>
      </div>

   <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" style= "color :#9d9d9d;">
    <% if user_signed_in? %>


    　<li class="">
    　 <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'Home', user_path(current_user.id) %>
      </span>
      </li>
       <li class="list-unstyled">
         <span class="glyphicon glyphicon-user" aria-hidden="true">
        <%= link_to 'Users', users_path %>
        </span>
      </li>
       <li class="list-unstyled">
         <span class="glyphicon glyphicon-book" aria-hidden="true">
        <%= link_to 'Books', books_path %>
        </span>
      </li>
      <li class="list-unstyled">
        <span class="glyphicon glyphicon-log-out" aria-hidden="true">
        <%= link_to "logout", destroy_user_session_path, method: :delete %>
        </span>
      </li>
    <% else %>
    　<li class="">
    　  <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'Home', root_path %>
      </span>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-link" aria-hidden="true">
        <%= link_to "About", home_about_path %>
        </span>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-edit" aria-hidden="true">
        <%= link_to "sign up", new_user_registration_path %>
        </span>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-log-in" aria-hidden="true">
        <%= link_to "login", new_user_session_path %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
</div>
 </header>


  <body>
    <!-- フラッシュメッセージ -->
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

    <%= yield %>
  </body>

  <footer>
    <div class= "col-lg-11">
    <p class="navbar-text navbar-right" >CopyRight Infratop.inc</p>
    </div>
  </footer>

</html>
