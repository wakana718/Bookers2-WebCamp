<div class="container">
 <div class="row">
   <div class="col-xs-3">
     <h1>User info</h1>
      <!--バリデーション-->
    <% if @user.errors.any? %>
    <%= @user.errors.count %>error
     <% @user.errors.full_messages.each do |message| %>
    <%= message %>
     <% end %>
    <% end %>

 <%= form_with model:@user, local:true do |f| %>
  <h4>Name</h4>
   <label class="control-label sr-only" for="inputEmail">Name</label>
     <%= f.text_field :name %>
   </br>
  <h4>Image</h4>
    <label class="control-label sr-only" for="inputEmail">Image</label>
      <%= f.attachment_field :profile_image %>
  </br>
  <h4>Introduction</h4>
    <label class="control-label sr-only" for="inputEmail">Introduction</label>
     <%= f.text_area :introduction %>
  <%= f.submit "Update User", class:"btn btn-default" %>
 <% end %>

  </div>
 </div>
</div>